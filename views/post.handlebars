<div class="card body-card">
  <h1 id="header" title="{{post.title}}" user="{{post.user.id}}">{{post.title}} -{{post.user.name}}</h1>

  <h2 class="body-text">{{post.content}}</h2>
  
  <a class="btn comment-btn" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"
      aria-controls="collapseExample">
      Add new Comment
    </a>
  {{#each post.comments as |comment|}}
  <p class="body-text">{{comment.content}}<div class="small-txt">by {{comment.user.name}} at {{comment.createdAt}}</div></p>
  <button data-id="{{comment.id}}" class="delete {{idCheck ../user.id comment.user_id}}">Delete</button>
  {{/each}}
</div>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Enter Comment</label>
        <input class="form-control" id="post-body" rows="3"></textarea>
      </div>
      <button class="comment comment-btn" id="newPostBtn">Submit</button>
    </div>
  </div>

<script src="../js/comment.js"></script>